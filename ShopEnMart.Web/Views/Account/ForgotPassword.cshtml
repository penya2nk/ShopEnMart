@model ShopEnMart.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Log in | ShopEnMart";
    Layout = null;
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="/CSS/admin_stylesheet.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background:url(../images/HomePageBanner1.png) no-repeat center center;">
    <div class="AdminForgetPassword" style="border-radius:10px">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <h1 style="text-align: center; margin-bottom: 20px">Reset Password</h1>
            <div class="container">
                @Html.TextBoxFor(m => m.EmailId, new { @class = "dashinp", @placeholder = "Email Address", @onkeypress = "return OnlyLegalCharacters();" })
                @Html.ValidationMessageFor(m => m.EmailId)
                
                <br />
                <div class="clearfix">
                    <input type="submit" value="Submit" onclick=" return CheckAndSumbitValidForm(this)" class="btn btn-success" style="width:100%; text-align: center;" />
                </div>
                <br />
                <div class="clearfix">
                    <a href="/admin/login" class="fgt fr" style="width:100%; text-align: center;">Sign In</a>
                </div>
                <br />
                <br />
            </div>
        }
    </div>
    <script type="text/javascript" src="/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/sweetalert-dev.js"></script>
</body>
</html>
<!--End contactus-->

<script>
    $(document).ready(function () {
        if ('@ViewBag.SendEmailMessage' != '') {
            swal('Reset password link is sent at your registered email-address', '', 'success');
        }
    })
</script>
